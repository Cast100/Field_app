<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

 <androidx.cardview.widget.CardView
     android:layout_width="match_parent"
     android:layout_marginRight="30dp"
     android:layout_marginLeft="30dp"
     app:cardCornerRadius="12dp"
     android:layout_marginTop="18dp"
     android:layout_height="160dp">

  <LinearLayout
      android:background="#292826"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="10dp"
       android:layout_marginRight="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/circle_id"
         android:layout_width="35dp"
         android:layout_height="35dp"
         android:layout_margin="10dp"
         android:layout_marginTop="5dp"
         android:src="@drawable/images" />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <TextView
         android:id="@+id/leagtitle"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_marginTop="18dp"
         android:textColor="#ffffff"
         android:text="University League"
         android:textSize="20sp"
         android:textStyle="bold"/>

    </RelativeLayout>

   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#ffffff"
        />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="80dp"

       >

    <TextView
        android:id="@+id/match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kampala University"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#ffffff"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/image_team"
         android:layout_width="52dp"
         android:layout_height="52dp"
         android:layout_margin="10dp"
         android:src="@drawable/pennant" />
    </RelativeLayout>


    <TextView
        android:id="@+id/soccer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:00PM"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/imag_team2"
         android:layout_width="52dp"
         android:layout_height="52dp"
         android:layout_margin="10dp"
         android:src="@drawable/pennant" />
    </RelativeLayout>
    <TextView
        android:id="@+id/match2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UCU"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#ffffff"/>
   </LinearLayout>


  </LinearLayout>
 </androidx.cardview.widget.CardView>
</LinearLayout>