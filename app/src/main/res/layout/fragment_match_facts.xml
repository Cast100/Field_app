<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/type_custom"
        android:layout_marginStart="40dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Cards"
          android:textColor="#FFFF"
          android:textSize="13sp"
          android:textStyle="italic"
          android:layout_gravity="center"
          android:layout_marginLeft="25dp"
          android:layout_marginStart="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal"
        android:layout_marginStart="25dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="25"
          android:textColor="#161515"
          android:textStyle="italic"
          android:layout_marginLeft="10dp"
          android:textSize="18sp"
          android:layout_marginStart="10dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="25dp"
          android:text="Okello M"
          android:textColor="#161515"
          android:textStyle="bold"
          android:layout_marginRight="55dp"
          android:textSize="17sp"
          android:layout_marginEnd="55dp"
          android:layout_marginStart="25dp" />

      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:src="@drawable/card_yellow"
          android:layout_marginLeft="-10dp"
          android:layout_marginStart="-10dp"
          android:contentDescription="null" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="3dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginEnd="3dp">

      <ImageView
          android:layout_width="50dp"
          android:layout_height="30dp"
          android:src="@drawable/card_yellow"
          android:layout_marginLeft="-10dp"
          android:layout_marginStart="-10dp"
          android:contentDescription="null" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:text="Shaban O"
          android:textColor="#161515"
          android:textStyle="bold"
          android:layout_marginRight="50dp"
          android:textSize="17sp"
          android:layout_marginEnd="50dp"
          android:layout_marginStart="30dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="10dp"
          android:text="76"
          android:textStyle="italic"
          android:textColor="#111111"
          android:textSize="17sp"
          android:layout_marginEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
      <View
          android:layout_width="300dp"
          android:layout_height="0.1dp"
          android:background="#111111" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/type_custom"
        android:layout_marginStart="40dp">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Substitution"
          android:textColor="#FFFF"
          android:textSize="13sp"
          android:textStyle="italic"
          android:layout_gravity="center"
          android:layout_marginLeft="25dp"
          android:layout_marginStart="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp">


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="60"
          android:textSize="17sp"
          android:layout_marginLeft="35dp"
          android:textColor="#111111"/>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="21dp"
          android:layout_marginLeft="20dp"
          android:background="@drawable/sub_green"
          android:src="@drawable/ic_right_black"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Farid Mussa"
          android:textStyle="bold"
          android:textSize="17sp"
          android:layout_marginLeft="16dp"
          android:textColor="#111111"/>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="35dp"
          android:src="@drawable/onduparaka"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp">

      <ImageView
          android:layout_width="30dp"
          android:layout_height="21dp"
          android:layout_marginLeft="20dp"
          android:background="@drawable/sub_red"
          android:src="@drawable/ic_left_black"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Omar Ngandu"
          android:textStyle="bold"
          android:textSize="17sp"
          android:layout_marginLeft="16dp"
          android:textColor="#111111"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp">


      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginLeft="35dp"
          android:src="@drawable/kcca"/>
      <ImageView
          android:layout_width="30dp"
          android:layout_height="21dp"
          android:layout_marginLeft="20dp"
          android:background="@drawable/sub_green"
          android:src="@drawable/ic_right_black"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Farid Mussa"
          android:textStyle="bold"
          android:textSize="17sp"
          android:layout_marginLeft="16dp"
          android:textColor="#111111"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="88"
          android:textSize="17sp"
          android:layout_marginLeft="35dp"
          android:textColor="#111111"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp">

      <ImageView
          android:layout_width="30dp"
          android:layout_height="21dp"
          android:layout_marginLeft="30dp"
          android:background="@drawable/sub_red"
          android:src="@drawable/ic_left_black"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Omar Ngandu"
          android:textStyle="bold"
          android:textSize="17sp"
          android:layout_marginLeft="16dp"
          android:textColor="#111111"/>

    </LinearLayout>


  </LinearLayout>


</ScrollView>

